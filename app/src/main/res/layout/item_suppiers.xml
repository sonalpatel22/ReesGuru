<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="5dp"
                android:scaleType="centerCrop"
                android:src="@drawable/demo_img" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="5dp">

                <com.sabrewinginfotech.reesguru.custom.RobotoTextView
                    android:id="@+id/txt_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Envoy Mortgage LTD"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/font_medium"
                    android:textStyle="bold" />

                <com.sabrewinginfotech.reesguru.custom.RobotoTextView
                    android:id="@+id/txt_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Dashrath Ahir"
                    android:textColor="@color/colorAccent"
                    android:textSize="@dimen/font_small_one"
                    android:textStyle="bold" />

                <com.sabrewinginfotech.reesguru.custom.RobotoTextView
                    android:id="@+id/txt_contact"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="7874713300"
                    android:textSize="@dimen/font_small_one" />

                <com.sabrewinginfotech.reesguru.custom.RobotoTextView
                    android:id="@+id/txt_desc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="this is the sample decryption of bank that's provide load by agent will help you to get load for your home "
                    android:textSize="@dimen/font_small" />


            </LinearLayout>


        </LinearLayout>


    </android.support.v7.widget.CardView>


</LinearLayout>